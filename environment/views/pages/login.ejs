<!-- views/pages/login.ejs -->
<!-- This page will be the dynamic HTML template we'll be using to get stuff from the database and show them on the website. -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
    	$(document).ready(function(){
    		var logEmail, logPassword;
    		$("#submit_").click(function(){
    			logEmail=$("#inputEmail").val();
    			logPassword=$("#inputPassword").val();
    		$.post("http://localhost:8080/login",{inputEmail: logEmail, inputPassword: logPassword},
    		function(data1){
    			if(data1 == "yes"){
    				alert("Login Successful")
    			}
    		});
    	});
		$("#submitL").click(function(){
			logEmail=-1;
    			logPassword=$("#inputPassword").val();
    		$.post("http://localhost:8080/login",{inputEmail: logEmail, inputPassword: logPassword},
    		function(data1){
    			if(data1 == "yes"){
    				alert("Logout Successful")
    			}
    		});


		});
    });
   </script> 
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>
  </head>
<body id="LoginForm">
<div class="container">
<% if(!myVar) { %>
<h1 class="form-heading">Login</h1>
<% } else { %>
<h1 class="form-heading">You are now logged in!</h1>
<% } %>
<div class="login-form">
<div class="main-div">
	<% if(!myVar) { %>
    <div class="panel">
	
   <p>Please enter your email and password</p>
   </div>
    <form id="Login">
        <div class="form-group">
            <input type="email" class="form-control" id="inputEmail" placeholder="Email Address">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="inputPassword" placeholder="Password">
        </div>
        <div class="forgot">
        <a href="reset.html">Forgot password?</a>
</div>
        <button type="submit" id="submit_" class="btn btn-primary">Login</button>

    </form>
	<% } else {%>
		<button type="submit" id="submitL" class="btn btn-primary">Logout</button>



	<% } %>
</div>
</body>
</html>


<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>
