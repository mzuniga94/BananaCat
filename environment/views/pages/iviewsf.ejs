<!-- views/pages/iviewsf.ejs -->
<!-- This page will be the dynamic HTML template we'll be using to get stuff from the database and show them on the website. -->
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %> <!-- Including partials/head -->
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>

<div class = "container">
    <div id="midoriyaHoodie" class="carousel slide" data-ride="carousel" style="width: 400px; height: 400px;">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" style="width: 400px; height: 400px;" src=<%= result.figurine_pic %> alt="Midoriya Hoodie">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" style="width: 400px; height: 400px;" src=<%= result.figurine_pic2 %> alt="Midoriya Hoodie">
    </div>
  </div>
  <a class="carousel-control-prev" href="#midoriyaHoodie" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#midoriyaHoodie" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<!-- Please style -->

<h1><%= result.figurine_brand %></h1>
<h2><%= result.figurine_name %></h2>
<p>$<%= result.figurine_price %></p>
<!--<p>Reviews: </p> -->

  <center>
        <button type="button" class="btn btn-primary btn-sm">Wishlist</button>
         <button type="button" class="btn btn-secondary btn-sm">Add to Cart</button>
        <button type="button" class="btn btn-primary btn-sm">View More</button>
  </center>  

  <center>
        <h2>Reviews:</h2>
        <% review.forEach(function(review){ %>
            <li><%= review.review_comment %></li>
       <%  }); %>
        <form action='/addreview' method="POST" id="reviewform">
          <input type="text" name="newreview" placeholder="Add your review">
          <button>Post</button>
  </center>

</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>
